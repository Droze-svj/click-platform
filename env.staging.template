# Staging Environment Variables Template
# Copy this file to .env.staging and fill in your values
# Command: cp env.staging.template .env.staging

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=staging
PORT=5002
FRONTEND_URL=https://staging.your-domain.com

# ============================================
# DATABASE
# ============================================
# Staging MongoDB (separate from production)
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/click-staging

# Or MongoDB Atlas (recommended for staging)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/click-staging?retryWrites=true&w=majority

# ============================================
# SECURITY
# ============================================
# Generate a strong secret: openssl rand -base64 32
# Use different secret from production
JWT_SECRET=your-staging-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=30d

# ============================================
# AWS S3 STORAGE (Optional but Recommended)
# ============================================
# Use separate bucket or folder for staging
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-bucket-name-staging
AWS_REGION=us-east-1
AWS_CLOUDFRONT_URL=https://staging-your-cloudfront-url.cloudfront.net

# ============================================
# REDIS CACHING (Optional but Recommended)
# ============================================
# Local Redis
REDIS_URL=redis://localhost:6379/1

# Or Redis Cloud (use separate instance)
# REDIS_URL=redis://username:password@redis-staging-host:6379

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
# Use separate Sentry project for staging
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# ============================================
# OAUTH - TWITTER/X
# ============================================
# Use staging/test app credentials
TWITTER_CLIENT_ID=your-twitter-staging-client-id
TWITTER_CLIENT_SECRET=your-twitter-staging-client-secret
TWITTER_CALLBACK_URL=https://staging.your-domain.com/api/oauth/twitter/callback

# ============================================
# OAUTH - LINKEDIN
# ============================================
LINKEDIN_CLIENT_ID=your-linkedin-staging-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-staging-client-secret
LINKEDIN_CALLBACK_URL=https://staging.your-domain.com/api/oauth/linkedin/callback

# ============================================
# OAUTH - FACEBOOK (also used for Instagram)
# ============================================
# Use staging/test app
FACEBOOK_APP_ID=your-facebook-staging-app-id
FACEBOOK_APP_SECRET=your-facebook-staging-app-secret
FACEBOOK_CALLBACK_URL=https://staging.your-domain.com/api/oauth/facebook/callback

# ============================================
# OAUTH - YOUTUBE
# ============================================
YOUTUBE_CLIENT_ID=your-youtube-staging-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-staging-client-secret
YOUTUBE_CALLBACK_URL=https://staging.your-domain.com/api/oauth/youtube/callback

# ============================================
# OAUTH - TIKTOK
# ============================================
TIKTOK_CLIENT_KEY=your-tiktok-staging-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-staging-client-secret
TIKTOK_CALLBACK_URL=https://staging.your-domain.com/api/oauth/tiktok/callback

# ============================================
# EMAIL (Optional)
# ============================================
# Use staging email service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-staging-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply-staging@your-domain.com

# ============================================
# OPENAI (for AI features)
# ============================================
# Can use same key or separate for staging
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# WHOP (for subscriptions)
# ============================================
# Use staging/test API key
WHOP_API_KEY=your-whop-staging-api-key
WHOP_API_URL=https://api.whop.com/api/v2

# ============================================
# RATE LIMITING
# ============================================
# More lenient for staging
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_CACHING=true

# ============================================
# STAGING SPECIFIC
# ============================================
# Allow more verbose logging in staging
DEBUG=true
# Disable some production features for testing
ENABLE_STRICT_VALIDATION=false
# Test mode flags
TEST_MODE=true


