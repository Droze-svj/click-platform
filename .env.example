# Click - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:3000
APP_URL=http://localhost:3000

# ============================================
# Database
# ============================================
MONGODB_URI=mongodb://localhost:27017/click

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# Google AI / Gemini (for AI features)
# ============================================
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ============================================
# File Upload Limits
# ============================================
MAX_VIDEO_FILE_SIZE=524288000
MAX_MUSIC_FILE_SIZE=52428800
MAX_FILE_SIZE=1073741824

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Redis (optional for local - workers work without it)
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# Cache Configuration
# ============================================
CACHE_MAX_ENTRIES=1000
CACHE_TTL_SECONDS=300

# ============================================
# Request Timeout
# ============================================
REQUEST_TIMEOUT=30000

# ============================================
# Sentry Error Tracking (Backend)
# ============================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=click@1.0.0
SENTRY_ORG=
SENTRY_PROJECT=

# ============================================
# Sentry Error Tracking (Frontend - Next.js)
# ============================================
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_RELEASE=click-client@1.0.0

# ============================================
# Cloud Storage (use S3 or Cloudinary for production scale)
# ============================================
# Option A: AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_S3_ACL=private
AWS_CLOUDFRONT_URL=

# Option B: Cloudinary (if set, takes precedence over S3 for uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# Twitter/X OAuth
# ============================================
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# ============================================
# LinkedIn OAuth
# ============================================
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ============================================
# Facebook/Instagram OAuth
# ============================================
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ============================================
# Stock Assets (Music, Images, B-Roll)
# ============================================
# PEXELS_API_KEY=your-pexels-api-key  # Optional: enables unlimited B-roll search via Pexels

# ============================================
# WHOP Integration (Optional)
# ============================================
WHOP_API_KEY=
WHOP_WEBHOOK_SECRET=
